cd /home/$USER/.config/Wallch/Checks/
ping -c 1 www.google.com > /dev/null
if [ `echo $?` != 0 ]; then
echo "Error, there is not internet connection."
echo "Error" > /home/$USER/.config/Wallch/Checks/1 #Temporary unavailable
exit
fi
wget https://dl.dropbox.com/u/11379868/1 2> /dev/null
if [ -s /home/$USER/.config/Wallch/Checks/1 ]; then
false
else
echo "Error, could not resolve host."
echo "Error" > /home/$USER/.config/Wallch/Checks/1 #Temporary unavailable
exit
fi
