if [ -d /home/$USER/.config/autostart ]; then
false
else
mkdir -p /home/$USER/.config/autostart/
fi
echo "#!/usr/bin/env xdg-open

[Desktop Entry]
Version=1.0
Encoding=UTF-8
Name=WallPaperChanger
Comment=A program to change your desktop wallpapers...!
Exec=/usr/share/wallch/files/Scripts/boot_wallpaper_changer
Terminal=false
Type=Application
Icon=/usr/share/wallch/files/wallpaper.png
Categories=Application;Accessories;Utility;
StartupNotify=false
Name[en_US]=Wallpaper Changer
X-GNOME-Autostart-enabled=true" > /home/$USER/.config/autostart/WallpaperChangerOnBoot.desktop
