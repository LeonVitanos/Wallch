#GNU General Public License for more details.
#You should have received a copy of the GNU General Public License
#along with this program; if not, write to the Free Software
#Foundation, Inc., 51 Franklin Street, Fifth Floor, Boston, MA  02110-1301, USA.
lines=`wc -l < /home/$USER/.config/Wallch/Checks/to_be_fixed`
lines=`expr $lines + 1`
if [ X"$(cat ~/.config/Wallch/Checks/randomimage)" != X"0" ]; then #random is enabled, move to a random image!
shownow=$RANDOM
let "shownow %= $lines"
else
shownow=$(cat /home/$USER/.config/Wallch/Checks/this_to_show_next_time)
shownow=$(expr $shownow + 1)
fi
if [ X"$(gconftool-2 --get /desktop/gnome/background/picture_filename)" = X"$(sed -n "${shownow}p;${shownow}q" ~/.config/Wallch/Checks/to_be_fixed_on_launch)" ]; then
if [ $shownow -ge $lines ]; then
shownow=1;
else
shownow=$(expr $shownow + 1)
fi
fi
if [ $shownow -ge $lines ]; then
shownow=1;
fi
echo $shownow > /home/$USER/.config/Wallch/Checks/this_to_show_next_time
